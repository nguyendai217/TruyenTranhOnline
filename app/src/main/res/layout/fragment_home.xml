<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_choice"
    android:scaleType="fitXY"
   >
    <TextView
        android:id="@+id/tv_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Comic Online"
        android:textColor="#070707"
        android:textSize="35sp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_home"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="#ffff"
        android:columnCount="2"
        android:rowCount="2">

        <LinearLayout
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_reading"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@mipmap/icon_reading" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Đọc truyện"
                android:textColor="#0F0E0E"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_booklike"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@mipmap/icon_book_like" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Truyện đã thích"
                android:textColor="#0F0E0E"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_note"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/icon_note" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Ghi chú"
                android:textColor="#0F0E0E"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_information"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@mipmap/icon_infor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Thông tin"
                android:textColor="#0F0E0E"
                android:textSize="20sp" />
        </LinearLayout>
    </GridLayout>
</RelativeLayout>
