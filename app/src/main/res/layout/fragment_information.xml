<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.InformationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Truyện tranh online"
            android:textSize="30sp" />
        <ImageView
            android:layout_marginTop="20dp"
            android:src="@mipmap/icon_reading"
            android:layout_gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:textStyle="italic"
            android:textColor="#383636"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:text="Nhóm sinh viên thực hiện"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/boder_infor"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center_horizontal"
                android:textColor="#1B1919"
                android:textSize="20sp"
                android:text="Nguyễn Trọng Đại"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#1B1919"
                android:textSize="20sp"
                android:text="Phạm Văn Nhật"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#1B1919"
                android:textSize="20sp"
                android:text="Nguyễn Thị Bích Vân"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="9"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#292121"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_grade_black_24dp"/>
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#292121"
                android:layout_marginRight="40dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>